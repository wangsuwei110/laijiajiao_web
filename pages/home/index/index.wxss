.container {
  font-weight: 300;
}
.top-info {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 100%;
  height: 240rpx;
  text-align: center;
}
.top-info .bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.top-info .top-info-item {
  flex: 1;
  font-size: 28rpx;
}
.top-info .top-info-item text {
  display: block;
  line-height: 1;
}
.top-info .top-info-item .numeral {
  margin-bottom: 24rpx;
  font-size: 44rpx;
  font-weight: 400;
}
.top-info .center .numeral {
  margin-top: -22rpx;
  font-size: 66rpx;
  font-weight: bold;
  color: #bd0000;
}
.top-info .center .sub-meta text {
  display: inline-block;
}
.top-info .center .explanation-icon {
  width: 30rpx;
  height: 30rpx;
  padding: 8rpx;
  vertical-align: middle;
}
.fast-entrance {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  background-color: #ffffff;
}
.fast-entrance .entrance {
  position: relative;
  height: 100%;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.fast-entrance .entrance::after {
  display: block;
  content: "";
  position: absolute;
  width: 1rpx;
  height: 100%;
  top: 0;
  right: 0;
  background-color: #e5e5e5;
  -webkit-transform: scale(0.5, 1);
  transform: scale(0.5, 1);
}
.fast-entrance .entrance:last-child::after {
  display: none;
}
.entrance .entrance-icon {
  width: 60rpx;
  margin-right: 24rpx;
  height:60rpx;
}
.entrance .entrance-name {
  font-size: 30rpx;
  color: #2a2a2a;
}
.main-content {
  padding: 0 20rpx;
  margin-bottom: 40rpx;
}
.remind-panel {
  position: relative;
  display: flex;
  align-items: center;
  padding: 26rpx 28rpx;
  border-radius: 5rpx;
  overflow: hidden;
  background-color: #ffffff;
  margin-bottom:26rpx;
}
.remind-panel .remind-new {
  position: absolute;
  top: 0;
  right: 0;
  width: 68rpx;
  height: 68rpx;
}
.remind-panel .remind-new image {
  width: 100%;
  height: 100%;
}
.remind-panel .remind-new text {
  position: absolute;
  top: 9rpx;
  right:9rpx;
  line-height: 1;
  font-size: 24rpx;
  font-weight: 500;
  color: #ffffff;
}
.remind-panel .remind-icon {
  width: 100rpx;
  height: 100rpx;
  margin-right: 26rpx;
  background-color: #f2eff6;
}
.remind-panel .remind-info {
  flex: 1;
}
.remind-panel .remind-info .remind-info-item {
  display: flex;
  align-items: center;
}
.remind-info .remind-name {
  flex: 1;
  line-height: 1;
  margin-bottom: 20rpx;
  font-size: 36rpx;
  font-weight: normal;
  color: #4c4c4c;
}
.remind-info .remind-time {
  margin-right: 30rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #adadad;
}
.remind-info .remind-type {
  flex: 1;
  font-size: 26rpx;
  color: #949494;
}
.remind-info .remind-text {
  font-size: 26rpx;
  color: #e50505;
}
.remind-info .boll-icon {
  width: 24rpx;
  height: 26rpx;
}
.panel-wrapper-4 {
  border-radius: 5rpx;
  overflow: hidden;
  background-color: #ffffff;
}
.panel-wrapper-4 .panel-head {
  position: relative;
  display: flex;
  align-items: center;
  height: 70rpx;
  padding: 0 28rpx;
  background-color: #e50505;
}
.panel-head .head-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}
.panel-head .head-title {
  flex: 1;
  font-weight: normal;
  font-size: 28rpx;
  color: #ffffff;
}
.panel-head .head-link-btn {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  line-height: 70rpx;
  padding-right: 28rpx;
  font-size: 24rpx;
  font-weight: 300;
  color: #ffffff;
}
.panel-wrapper-4 .panel-body {
  padding: 0 28rpx;
}
.panel-wrapper-4 .panel-foot {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 72rpx;
  line-height: 1;
  background-color: #f7f7f7;
  font-size: 28rpx;
  color: #291e29;
}
.panel-foot .arrow-icon {
  margin-left: 12rpx;
  margin-top: -6rpx;
}
.demand-item {
  position: relative;
  padding: 40rpx 0 20rpx 0;
}
.demand-item::after {
  display: block;
  content: "";
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 1rpx;
  background-color: #e5e5e5;
  -webkit-transform: scale(1, 0.5);
  transform: scale(1, 0.5);
}
.demand-item:last-child:after {
  display: none;
}
.demand-item .item-title {
  position: relative;
  padding: 0 120rpx 0 38rpx;
  margin-bottom: 25rpx;
}
.demand-item .item-title .dot {
  position: absolute;
  left: 0;
  top: 15rpx;
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: rgba(229, 5, 5, 0.18);
  border-radius: 100%;
  overflow: hidden;
}
.demand-item .item-title .name {
  display: inline-block;
  line-height: 1.4;
  font-size: 32rpx;
  font-weight: 500;
  color: #434343;
}
.demand-item .item-title .date {
  position: absolute;
  top: 6rpx;
  right: 0;
  font-size: 24rpx;
  color: #adadad;
}
.demand-item .join {
  line-height: 1;
  margin-left: 38rpx;
  font-size: 26rpx;
  color: #737373;
}
.demand-item .join .join-num {
  font-size: 28rpx;
  font-weight: normal;
  color: #e50505;
}
.demand-item .demand-ul {
  padding-left: 38rpx;
  margin-top: 40rpx;
  font-size: 26rpx;
}
.demand-ul .demand-li {
  display: flex;
  margin-bottom: 20rpx;
}
.demand-ul .demand-li .label {
  width: 135rpx;
  color: #a0a0a0;
}
.demand-ul .demand-li .cont {
  flex: 1;
}
.dynamic-item {
  position: relative;
  display: flex;
  align-items: center;
  padding: 40rpx 0;
}
.dynamic-item::after {
  display: block;
  content: "";
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 1rpx;
  background-color: #e5e5e5;
  -webkit-transform: scale(1, 0.5);
  transform: scale(1, 0.5);
}
.dynamic-item:last-child:after {
  display: none;
}
.dynamic-item .user-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 100%;
  overflow: hidden;
  border: 1px solid #f2f2f2;
}
.dynamic-item .user-desc {
  position: relative;
  flex: 1;
  line-height: 1;
  margin-left: 28rpx;
}
.user-desc .name {
  font-size: 32rpx;
  color: #434343;
  font-weight: 500;
}
.user-desc .date {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 26rpx;
  color: #adadad;
}
.user-desc .cont {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #737373;
}
